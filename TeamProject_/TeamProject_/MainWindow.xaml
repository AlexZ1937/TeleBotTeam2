<Window x:Class="TeamProject_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamProject_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Width="300" Height="80" Margin="0,40,400,0" Background="LightGray"></TextBox>
        <ComboBox Width="200" Height="40" Margin="200,0,0,0"></ComboBox>
        <Button Name="Accept" Content="Send" FontSize="20" Width="150" Height="40" Margin="600,0,0,0" ></Button>
    </Grid>
</Window>
